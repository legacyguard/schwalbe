{
  "expo": {
    "name": "LegacyGuard",
    "slug": "legacyguard",
    "version": "1.0.0",
    "scheme": "legacyguard",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.legacyguard.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely access your documents and family protection protocols.",
        "NSCameraUsageDescription": "Take photos of documents to upload to your secure vault.",
        "NSPhotoLibraryUsageDescription": "Select photos from your library to upload to your secure vault."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e293b"
      },
      "package": "com.legacyguard.app",
      "permissions": [
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "CAMERA",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "build": {
        "babel": {
          "include": [
            "@schwalbe/shared",
            "@schwalbe/ui",
            "@schwalbe/logic"
          ]
        }
      },
      "serviceWorker": false
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e293b"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Use Face ID to securely access your documents."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}