{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-native"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/logic"
    }
  ],
  "include": [
    "src/**/*",
    "app/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
