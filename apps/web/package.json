{
  "name": "@schwalbe/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:fallback": "mkdir -p dist && cp public/index.html dist/index.html",
    "build:safe": "npm run build || npm run build:fallback",
    "preview": "vite preview",
    "test": "jest --config ./jest.config.cjs --no-cache --runInBand --colors",
    "test:coverage": "jest --config ./jest.config.cjs --coverage --coverageReporters=html --coverageReporters=text",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --headed=false --reporter=json",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .vite"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@schwalbe/shared": "*",
    "@supabase/supabase-js": "^2.57.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "i18next": "^25.5.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^2.7.3",
    "lucide-react": "^0.486.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.7.3",
    "react-native-web": "^0.21.1",
    "react-router-dom": "6.15.0",
    "react-window": "^1.8.8",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@tailwindcss/forms": "^0.5.10",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.12",
    "@types/react-dom": "~18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.2",
    "vite": "^6.0.1"
  }
}
