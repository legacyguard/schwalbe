{
  "name": "schwalbe-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:web": "turbo run dev --filter=@schwalbe/web",
    "dev:mobile": "turbo run dev --filter=@schwalbe/mobile",
    "dev:demo": "turbo run dev --filter=@schwalbe/demo",
    "build:web": "turbo run build --filter=@schwalbe/web",
    "build:mobile": "turbo run build --filter=@schwalbe/mobile",
    "build:demo": "turbo run build --filter=@schwalbe/demo",
    "build:packages": "turbo run build --filter='./packages/*'",
    "test:ci": "turbo run test --cache-dir=.turbo",
    "lint:ci": "turbo run lint --cache-dir=.turbo"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}