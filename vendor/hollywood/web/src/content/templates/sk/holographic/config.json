{
  "templateId": "sk-holographic-sk",
  "jurisdiction": "SK",
  "type": "holographic",
  "language": "sk",
  "version": "1.0.0",
  "metadata": {
    "name": "Slovenská holografická závet",
    "description": "Štandardná holografická závet pre Slovenskú republiku",
    "lastUpdated": "2025-01-25",
    "legalReview": {
      "isApproved": true,
      "reviewDate": "2025-01-25"
    }
  },
  "variables": [
    {
      "key": "testatorName",
      "label": "Celé meno",
      "type": "text",
      "required": true,
      "dataSource": "user",
      "validation": [
        {
          "type": "required",
          "message": "Celé meno je povinné"
        },
        {
          "type": "minLength",
          "value": 2,
          "message": "Meno musí obsahovať aspoň 2 znaky"
        }
      ]
    },
    {
      "key": "birthDate",
      "label": "Dátum narodenia",
      "type": "date",
      "required": true,
      "dataSource": "user",
      "validation": [
        {
          "type": "required",
          "message": "Dátum narodenia je povinný"
        }
      ]
    },
    {
      "key": "birthPlace",
      "label": "Miesto narodenia",
      "type": "text",
      "required": true,
      "dataSource": "user"
    },
    {
      "key": "personalId",
      "label": "Rodné číslo",
      "type": "text",
      "required": false,
      "dataSource": "user",
      "validation": [
        {
          "type": "pattern",
          "value": "^\\d{6}/\\d{3,4}$",
          "message": "Rodné číslo musí byť vo formáte RRMMDD/XXXX"
        }
      ]
    },
    {
      "key": "address",
      "label": "Adresa bydliska",
      "type": "text",
      "required": true,
      "dataSource": "user"
    },
    {
      "key": "citizenship",
      "label": "Štátne občianstvo",
      "type": "select",
      "required": true,
      "dataSource": "user",
      "options": [
        { "value": "slovenská", "label": "Slovenská republika" },
        { "value": "česká", "label": "Česká republika" },
        { "value": "nemecká", "label": "Nemecko" },
        { "value": "iná", "label": "Iná" }
      ]
    },
    {
      "key": "age",
      "label": "Vek",
      "type": "number",
      "required": true,
      "dataSource": "user",
      "validation": [
        {
          "type": "legal",
          "value": 18,
          "message": "Osoba musí byť staršia ako 18 rokov na vykonanie závetu"
        }
      ]
    },
    {
      "key": "maritalStatus",
      "label": "Rodinný stav",
      "type": "select",
      "required": true,
      "dataSource": "user",
      "options": [
        { "value": "ženatý/vydatá", "label": "Ženatý/Vydatá" },
        { "value": "slobodný/slobodná", "label": "Slobodný/Slobodná" },
        { "value": "rozvedený/rozvedená", "label": "Rozvedený/Rozvedená" },
        { "value": "ovdovený/ovdovená", "label": "Ovdovený/Ovdovená" }
      ]
    },
    {
      "key": "spouse",
      "label": "Manžel/Manželka",
      "type": "object",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "spouseName",
      "label": "Meno manžela/manželky",
      "type": "text",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "children",
      "label": "Deti",
      "type": "array",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "beneficiaries",
      "label": "Dedičia",
      "type": "array",
      "required": true,
      "dataSource": "beneficiary",
      "validation": [
        {
          "type": "required",
          "message": "Musí byť určený aspoň jeden dedič"
        }
      ]
    },
    {
      "key": "realEstate",
      "label": "Nehnuteľný majetok",
      "type": "array",
      "required": false,
      "dataSource": "asset"
    },
    {
      "key": "bankAccounts",
      "label": "Bankové účty",
      "type": "array",
      "required": false,
      "dataSource": "asset"
    },
    {
      "key": "vehicles",
      "label": "Vozidlá",
      "type": "array",
      "required": false,
      "dataSource": "asset"
    },
    {
      "key": "personalProperty",
      "label": "Hnuteľný majetok",
      "type": "array",
      "required": false,
      "dataSource": "asset"
    },
    {
      "key": "hasExecutor",
      "label": "Má vykonávateľa závetu",
      "type": "boolean",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "executorName",
      "label": "Meno vykonávateľa",
      "type": "text",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "executorAddress",
      "label": "Adresa vykonávateľa",
      "type": "text",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "hasMinorChildren",
      "label": "Má neplnoleté deti",
      "type": "boolean",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "primaryGuardian",
      "label": "Hlavný opatrovník",
      "type": "object",
      "required": false,
      "dataSource": "guardian"
    },
    {
      "key": "backupGuardian",
      "label": "Náhradný opatrovník",
      "type": "object",
      "required": false,
      "dataSource": "guardian"
    },
    {
      "key": "funeralWishes",
      "label": "Pohrebné priania",
      "type": "text",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "organDonation",
      "label": "Darovanie orgánov",
      "type": "object",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "digitalAssets",
      "label": "Digitálny majetok",
      "type": "text",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "personalMessages",
      "label": "Osobné odkazy",
      "type": "array",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "currentDate",
      "label": "Aktuálny dátum",
      "type": "date",
      "required": true,
      "dataSource": "system"
    },
    {
      "key": "forcedHeirsNotice",
      "label": "Upozornenie na nevyhnutných dedičov",
      "type": "boolean",
      "required": false,
      "dataSource": "system"
    },
    {
      "key": "charitableBequests",
      "label": "Charitatívne odkazy",
      "type": "array",
      "required": false,
      "dataSource": "user"
    },
    {
      "key": "residuaryBeneficiary",
      "label": "Univerzálny dedič",
      "type": "text",
      "required": true,
      "dataSource": "beneficiary"
    }
  ],
  "validationRules": [
    {
      "type": "legal",
      "field": "age",
      "condition": ">=18",
      "message": "Zosaditeľ musí byť starší ako 18 rokov",
      "severity": "error",
      "jurisdictionSpecific": true
    },
    {
      "type": "custom",
      "field": "beneficiaries",
      "condition": "length > 0",
      "message": "Musí byť určený aspoň jeden dedič",
      "severity": "error"
    },
    {
      "type": "legal",
      "field": "forcedHeirs",
      "condition": "respectForcedHeirship",
      "message": "Rozdelenie musí rešpektovať práva nevyhnutných dedičov",
      "severity": "error",
      "jurisdictionSpecific": true
    }
  ],
  "legalClauses": [
    {
      "id": "holographic_declaration",
      "type": "mandatory",
      "jurisdiction": "SK",
      "content": "Táto holografická závet je napísaná celá mojou rukou a podpísaná mnou, ako povoľuje § 476 občianskeho zákonníka.",
      "legalBasis": "§ 476 zákona č. 40/1964 Zb., občiansky zákonník"
    },
    {
      "id": "revocation_clause",
      "type": "mandatory",
      "jurisdiction": "SK",
      "content": "Týmto odvolávam všetky skôr urobené závety a kodiciily.",
      "legalBasis": "§ 479 zákona č. 40/1964 Zb., občiansky zákonník"
    },
    {
      "id": "forced_heirship_notice",
      "type": "conditional",
      "jurisdiction": "SK",
      "content": "Podľa slovenského práva majú niektoré osoby nárok na povinný podiel - nevyhnutný dedičský podiel.",
      "legalBasis": "§ 479a-479d zákona č. 40/1964 Zb., občiansky zákonník",
      "applicableWhenConditions": {
        "hasSpouse": true,
        "hasChildren": true
      }
    }
  ],
  "executionInstructions": {
    "holographic": {
      "steps": [
        "Celý text závetu prepíšte vlastnou rukou na papier",
        "Podpíšte sa svojím obvyklým podpisom",
        "Napíšte dátum podpisu",
        "Uložte na bezpečné miesto",
        "Informujte vykonávateľa alebo dôveryhodnú osobu o umiestnení"
      ],
      "requirements": [
        "Celý závet musí byť napísaný rukou zosaditeľa",
        "Musí byť podpísaný zosaditeľom",
        "Musí byť datovaný",
        "Zosaditeľ musí byť pri zmysloch a starší ako 18 rokov"
      ],
      "warnings": [
        "Nepoužívajte tlačopis ani počítač",
        "Nepodpisujte prázdny alebo čiastočne vyplnený formulár",
        "Ubezpečte sa, že je písmo čitateľné",
        "V prípade opráv alebo škrtnutí iniciálujte zmeny"
      ]
    }
  }
}
